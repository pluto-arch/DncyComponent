@page "/ConsoleLogs"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@inject IJSRuntime JS

<div class="log-overflow continuous-scroll-overflow">
    <div class="log-container" id="logContainer">
        <Virtualize Items="_appRunninglogs" ItemSize="20" OverscanCount="5" Context="flight">
            <div class="line-row-container">
                <div class="line-row">
                    <span class="line-area" role="log">
                        <span class="line-number">-</span>
                        <span class="content">
                            @((MarkupString)(flight ?? string.Empty))
                        </span>
                    </span>
                </div>
            </div>
        </Virtualize>
    </div>
</div>