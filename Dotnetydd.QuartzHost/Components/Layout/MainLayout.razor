@inherits LayoutComponentBase


<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <div class="d-flex">
            <MudNavLink Style="width:auto">Link 1</MudNavLink>
            <MudNavLink Style="width:auto">Link 2</MudNavLink>
            <MudNavLink Style="width:auto">Looong Link</MudNavLink>
        </div>
        <MudSpacer/>
        <MudMenu Icon="@Icons.Material.Filled.Person" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <MudDivider/>
            <MudMenuItem Link="/account/signout" ForceLoad="true"><MudIcon Icon="@Icons.Material.Filled.Logout" Size="Size.Small"/> Esci</MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-5">
            <PageViewer>
                @Body
            </PageViewer>
        </MudContainer>
    </MudMainContent>
</MudLayout>



